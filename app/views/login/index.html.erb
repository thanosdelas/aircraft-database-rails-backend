<h2>Login</h2>

<%= form_with model: @user, url: create_session_path do |f| %>
  <% flash.each do |type, message| %>
    <div>
      <%= message %>
    </div>
  <% end %>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <p>
    <%= f.submit 'Login' %>
  </p>
<% end %>
